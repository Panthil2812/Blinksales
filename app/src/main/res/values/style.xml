<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>

</style>
    <style name="Actionbar">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="textView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/textview_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/divider</item>
    <!--           android:textColorHint="@color/divider"-->
    <!--           app:boxStrokeColor="@color/colorAccent"-->
    <!--           app:boxStrokeErrorColor="@color/colorAccent"-->
    <!--           app:errorTextColor="@color/primary_light"-->
    <!--           app:hintTextColor="@color/colorAccent"-->
    </style>
</resources>