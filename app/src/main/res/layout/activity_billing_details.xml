<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".BillingDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/id_back_arrow"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_backarrow"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Billing Details"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="18dp"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Bill No." />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Total" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Date" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/billing_details_id"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="23" />

                            <TextView
                                android:id="@+id/billing_details_total_item"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="450" />

                            <TextView
                                android:id="@+id/billing_details_date"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:paddingStart="4dp"
                                android:text="2021-01-14 11:22:20" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Customer Name" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Customer Number" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/billing_details_c_name"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="John" />

                            <TextView
                                android:id="@+id/billing_details_phone"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="xxxxxxxxxx" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Packing Charge" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Delivery  Charge" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/billing_details_p_charge"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="0.0" />

                            <TextView
                                android:id="@+id/billing_details_d_charge"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="xxxxxxxxxx" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="vertical">

                        <TableLayout
                            android:id="@+id/item_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorAccent"
                                android:layout_marginBottom="8dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/textView22"
                                    style="@style/TextForTitleHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="Item" />

                                <TextView
                                    android:id="@+id/textView23"
                                    style="@style/TextForTitleHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="Qty" />

                                <TextView
                                    android:id="@+id/textView24"
                                    style="@style/TextForTitleHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="Unit/kg" />

                                <TextView
                                    android:id="@+id/textView25"
                                    style="@style/TextForTitleHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="Total" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Discount" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="GST Amount" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Grand    Total" />

                            <TextView
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="Net Amount" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/billing_details_discount"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="5 %" />

                            <TextView
                                android:id="@+id/billing_details_get_amount"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="45" />

                            <TextView
                                android:id="@+id/billing_details_grand_total"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="2300" />

                            <TextView
                                android:id="@+id/billing_details_net_amount"
                                style="@style/TextForHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimaryDark"
                                android:paddingStart="4dp"
                                android:text="2345" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/print_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="18dp"
                        android:paddingStart="32dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="32dp"
                        android:paddingBottom="8dp">

                        <Button
                            android:id="@+id/billing_details_print"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/button_background"
                            android:text="Print"
                            android:textColor="@color/primary_light"
                            android:textSize="24dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>