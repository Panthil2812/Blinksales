<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/cart_background"
    android:elevation="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/cart_pro_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/p3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/id_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="12345"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/cart_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Products Name"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:paddingStart="8dp"
                    android:text="10000"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:paddingEnd="8dp"
                    android:text=" ₹ /-"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cart_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/cart_btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:backgroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_plus" />

                <EditText
                    android:id="@+id/cart_pro_Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/cart_btn_min"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:backgroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_minus" />

            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/cart_pro_amount"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:gravity="center|end"
                   android:paddingStart="8dp"
                   android:text="10000"
                   android:textColor="@color/colorAccent"
                   android:textSize="18sp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center|end"
                   android:paddingEnd="8dp"
                   android:text=" ₹ /-"
                   android:textColor="@color/colorAccent"
                   android:textSize="18sp" />
           </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
